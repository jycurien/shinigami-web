<div class="modal fade" id="{{modal_id}}" tabindex="-1" aria-labelledby="{{modal_id}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{modal_title}}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{modal_body}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{modal_close_label}}</button>
                <a type="button" class="btn btn-primary js-modal-valid-btn" href="{{modal_valid_href}}">{{modal_valid_label}}</a>
            </div>
        </div>
    </div>
</div>