{% extends "layout.html.twig" %}

{% trans_default_domain 'app' %}

{% set active = '' %}

{% block page_title %}
    {{ 'home' | trans | title }}
{% endblock %}

{% block content %}
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            {% for article in sliderArticles %}
                <li  data-bs-target="#myCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
            {% endfor %}
        </div>
        <div class="carousel-inner">
            {% for article in sliderArticles %}

                <div class="carousel-item {% if loop.first %} active {% endif %}">
                    <img src="{{ asset('picture/articles/' ~ article.picture) }}" alt="{{ article.title }}">
                    <div class="carousel-caption d-none d-md-block">
                        <h1>{{ article.title }}</h1>
                        <p>{{ article.content | summary }}</p>
                        <p><a class="btn btn-lg btn-warning" href="{{ path('article_article', {'slug': article.slug, 'id': article.id }) }}" role="button">{{ 'read_more' | trans }}</a></p>
                    </div>
                </div>

            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

