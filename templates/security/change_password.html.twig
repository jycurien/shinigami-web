{% extends "layout.html.twig" %}

{% trans_default_domain 'user' %}

{% set active = 'login' %}

{% block page_title %}
    {{ 'security.login.forgot_password?' | trans | title }}
{% endblock %}

{% block content %}
    {% embed "component/_black_card.twig" %}
        {% trans_default_domain 'user' %}
        {% block card_content %}
            <h1 class="fw-bold mb-5 text-uppercase">{{ 'change_password.submit' | trans | title}}</h1>
            <p class="mb-5">Veuillez choisir votre nouveau mot de passe via le formulaire ci-dessous</p>
            {{ form_start(change_password_form) }}
            {{ form_rest(change_password_form) }}
            <button class="btn btn-lg btn-warning mt-4" type="submit">{{ 'change_password.submit' | trans }}</button>
            {{ form_end(change_password_form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

