{% extends "layout.html.twig" %}

{% trans_default_domain 'user' %}

{% set active = 'login' %}

{% block page_title %}
    {{ 'security.login.forgot_password?' | trans | title }}
{% endblock %}

{% block content %}
    {% embed "component/_black_card.twig" %}
        {% trans_default_domain 'user' %}
        {% block card_content %}
            <h1 class="fw-bold mb-5 text-uppercase">{{ 'security.login.forgot_password?' | trans | title}}</h1>
            <form action="{{ path('security_forgot_password') }}" method="post" class="mb-5">
                <div class="mb-5">
                    <label class="form-label" for="email">{{ 'resetting.request.email' | trans }}</label>
                    <input type="email" id="email" name="email" value="{{ last_email }}" class="form-control {% if error %}is-invalid{% endif %}" />
                    <p class="invalid-feedback">{% if error %}{{ 'resetting.request.error' | trans }}{% endif %}</p>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">

                <button class="btn btn-lg btn-warning mt-4" type="submit">{{ 'resetting.request.submit' | trans }}</button>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}

