{% extends "layout.html.twig" %}

{% trans_default_domain 'user' %}

{% set active = 'register' %}

{% block page_title %}
    {{ 'layout.register' | trans | title }}
{% endblock %}

{% block content %}
    {% embed "component/_black_card.twig" %}
        {% trans_default_domain 'user' %}
        {% block card_content %}
            <h1 class="fw-bold mb-5 text-uppercase">{{ 'layout.register' | trans | title}}</h1>

            {{ form_start(registration_form) }}
                {{ form_row(registration_form.username) }}
                {{ form_row(registration_form.email) }}
                <button class="btn btn-lg btn-warning mt-4" type="submit">{{ 'layout.register' | trans }}</button>
            {{ form_end(registration_form) }}

            <p class="mt-5 mb-0">{{ 'security.register.already_have_account?' | trans }} <a href="{{ path('security_login') }}" class="text-white-50 fw-bold">{{ 'security.register.sign_in' | trans }}</a></p>
        {% endblock %}
    {% endembed %}
{% endblock %}