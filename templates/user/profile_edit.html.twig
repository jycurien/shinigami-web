{% extends "layout.html.twig" %}

{% trans_default_domain 'user' %}

{% set active = 'profile' %}

{% block page_title %}
    {{ 'Mon Compte' | title }}
{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <h1>{{'Modifier mes informations' | title}}</h1>
        <div class="row mt-5">
            <div class="col-12">
                {{ form_start(userEditForm, { 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(userEditForm.firstName) }}
                        {{ form_row(userEditForm.lastName) }}
                        {{ form_row(userEditForm.phoneNumber) }}
                        {{ form_row(userEditForm.birthDate) }}
                    </div>
                    <div class="col-md-6">
{#                        TODO DRAG AND DROP#}
                        {{ form_row(userEditForm.image) }}
                        <fieldset class="fieldset">
                            <legend>{{ 'address' | trans({}, 'form') }}</legend>
                            {{ form_row(userEditForm.address.address) }}
                            {{ form_row(userEditForm.address.zipCode) }}
                            {{ form_row(userEditForm.address.city) }}
                        </fieldset>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-lg btn-primary" />
                </div>
                {{ form_end(userEditForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('drag_and_drop_img') }}
{% endblock %}

