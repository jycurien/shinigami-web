{% extends "layout.html.twig" %}

{% trans_default_domain 'user' %}

{% set active = active %}

{% block page_title %}
    {{ 'change_password.submit' | trans | title }}
{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <h1>{{ 'change_password.submit' | trans | title}}</h1>
        <p class="mb-5">Veuillez choisir votre nouveau mot de passe via le formulaire ci-dessous</p>
        {{ form_start(change_password_form) }}
        {{ form_rest(change_password_form) }}
        <button class="btn btn-lg btn-warning mt-4" type="submit">{{ 'change_password.submit' | trans }}</button>
        {{ form_end(change_password_form) }}
    </div>
{% endblock %}

